<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#424242"
    android:orientation="vertical"
    android:paddingBottom="@dimen/settings10"
    android:paddingLeft="@dimen/settings10"
    android:paddingRight="@dimen/settings10"

    >

    <LinearLayout
        android:id="@+id/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:gravity="left|center_vertical"
        android:paddingTop="10dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:src="@drawable/icon_hotcalls" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/dialog_hotcalls_header"
            android:textColor="@color/turquoise"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tvTitle_FDHC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:padding="5dp"
        android:text="@string/dialog_hotcalls_set_emergency_numbers"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:weightSum="6">

        <ImageView
            android:id="@+id/ivCallFirst_FDHC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@drawable/hotcalls_background_imageview"
            android:clickable="true"
            android:src="@drawable/ic_phone" />

        <EditText
            android:id="@+id/etFirstEmergencyNumber_FDHC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/hotcalls_background_edittext"
            android:gravity="center|center_vertical"
            android:hint="@string/dialog_hotcalls_enter_number"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#616161"

            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:weightSum="6">

        <ImageView
            android:id="@+id/ivCallSecond_FDHC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@drawable/hotcalls_background_imageview"
            android:clickable="true"
            android:src="@drawable/ic_phone" />

        <EditText
            android:id="@+id/etSecondEmergencyNumber_FDHC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/hotcalls_background_edittext"
            android:gravity="center|center_vertical"
            android:hint="@string/dialog_hotcalls_enter_number"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#616161"
            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:weightSum="6">

        <ImageView
            android:id="@+id/ivCallThird_FDHC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@drawable/hotcalls_background_imageview"
            android:clickable="true"
            android:src="@drawable/ic_phone" />

        <EditText
            android:id="@+id/etThirdEmergencyNumber_FDHC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/hotcalls_background_edittext"
            android:gravity="center|center_vertical"
            android:hint="@string/dialog_hotcalls_enter_number"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#616161"
            android:textSize="20sp" />

    </LinearLayout>

    <Button

        android:id="@+id/btnSavePhones_FDHC"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@color/turquoise"
        android:text="@string/dialog_hotcalls_save"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>