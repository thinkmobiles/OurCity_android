<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B6B6B6"
    android:paddingBottom="8dp"
    >
    <!-- header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#9E9E9E"
        android:drawablePadding="@dimen/settings3"
        android:drawableLeft="@drawable/icon_hotcalls"
        android:paddingBottom="@dimen/settings15"
        android:paddingLeft="@dimen/settings15"
        android:paddingTop="@dimen/settings15"
        android:text="לחצן מצוקה"
        android:gravity="center|left"
        android:textColor="@color/turquoise"
        android:textSize="@dimen/settings22"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הגדר מספרים לשעת חירום"
        android:id="@+id/tvTitle_FDHC"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:layout_marginBottom="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:weightSum="6">

        <EditText
            android:id="@+id/etFirstEmergencyNumber_FDHC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_vertical"
            android:hint="הזן מספר"
            android:textColorHint="#616161"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="20sp"
            android:background="@drawable/hotcalls_background_edittext"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/ivCallFirst_FDHC"
            android:clickable="true"
            android:src="@drawable/ic_phone"
            android:background="@drawable/hotcalls_background_imageview"
            android:layout_weight="5"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:weightSum="6">

        <EditText
            android:id="@+id/etSecondEmergencyNumber_FDHC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_vertical"
            android:hint="הזן מספר"
            android:textColorHint="#616161"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="20sp"
            android:background="@drawable/hotcalls_background_edittext"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/ivCallSecond_FDHC"
            android:clickable="true"
            android:src="@drawable/ic_phone"
            android:background="@drawable/hotcalls_background_imageview"
            android:layout_weight="5"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:weightSum="6">

        <EditText
            android:id="@+id/etThirdEmergencyNumber_FDHC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_vertical"
            android:hint="הזן מספר"
            android:textColorHint="#616161"
            android:textColor="@color/black"
            android:inputType="number"
            android:textSize="20sp"
            android:background="@drawable/hotcalls_background_edittext"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/ivCallThird_FDHC"
            android:clickable="true"
            android:src="@drawable/ic_phone"
            android:background="@drawable/hotcalls_background_imageview"
            android:layout_weight="5"
            android:layout_marginEnd="5dp"
            />
    </LinearLayout>

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="עדכן"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/btnSavePhones_FDHC"
        android:layout_gravity="center_horizontal"
        android:background="@color/turquoise"
        android:visibility="gone"/>


