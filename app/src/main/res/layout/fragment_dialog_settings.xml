<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#424242"
    android:orientation="vertical"
    android:paddingBottom="@dimen/settings10"
    android:paddingLeft="@dimen/settings10"

    android:paddingRight="@dimen/settings10">
    <!-- header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:src="@drawable/settingbtn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="הגדרות"
            android:textColor="@color/turquoise"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- main -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>

        <RelativeLayout
            android:id="@+id/rlHotCalls_SetDFrgmt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/settings10"
            android:background="@drawable/new_rec_setting"
            android:clickable="true"
            android:padding="@dimen/settings10"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:text="לחצן מצוקה"
                android:textColor="#148989"
                android:textSize="@dimen/settings16"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_hotcalls" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlSignUp_SetDFrgmt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/settings10"
            android:background="@drawable/new_rec_setting"
            android:clickable="true"
            android:padding="@dimen/settings10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingLeft="5dp"
                android:paddingStart="5dp"
                android:text="פרטים אישיים"
                android:textColor="#148989"
                android:textSize="@dimen/settings16"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_details" />
        </RelativeLayout>


        <!-- uncomment visibility -->
        <RelativeLayout
            android:id="@+id/setting_interest_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings10"
            android:background="@drawable/new_rec_setting"
            android:clickable="true"
            android:padding="@dimen/settings10"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="תחומי עניין"
                android:textColor="#148989"

                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_interesting" />
        </RelativeLayout>


        <!-- uncomment visibility -->
        <RelativeLayout

            android:id="@+id/confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/new_rec_setting"
            android:clickable="true"
            android:padding="@dimen/settings10"
            android:visibility="gone">

            <TextView

                android:id="@+id/text_message_for_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="מוסדות לימוד"
                android:textColor="#148989"
                android:textSize="@dimen/settings16"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_massenger" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rlLogout_FDS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/new_rec_setting"
            android:clickable="true"
            android:padding="@dimen/settings10"
            android:visibility="gone">

            <TextView

                android:id="@+id/tvLogout_FDS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="@string/setting_dialog_logout"
                android:textColor="#148989"
                android:textSize="@dimen/settings16"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logout" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>