<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/fragment_map_trips"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/mapTrips_MTF"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btnAnotherTrips_MTF"
        android:layout_width="@dimen/btn_interest_point_width"
        android:layout_height="@dimen/btn_interest_point_height"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/btn_interest_point_margin_top"
        android:background="@drawable/btn_selector_mf"
        android:text="@string/map_btn_trips"
        android:textColor="#FFF"
        android:textSize="@dimen/btn_interest_point_size"
        android:textStyle="bold"/>
</RelativeLayout>