<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/vTopLine_SMF"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="9dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="5dp"
                android:text="@string/fragment_send_mail_to_contact_us"
                android:textColor="#242424"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:textColor="#242424"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="5dp"
                android:text="@string/fragmend_send_mail_detail"
                android:textSize="13dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etFirstName_SMF"
                android:textColor="#242424"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@drawable/boarder_round_green_ff"
                android:ellipsize="end"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:textSize="15sp"/>

            <TextView
                android:textColor="#242424"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:text="@string/fragment_send_mail_lname"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etLastName_SMF"
                android:textColor="#242424"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@drawable/boarder_round_green_ff"
                android:ellipsize="end"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:textSize="15sp"/>

            <TextView
                android:textColor="#242424"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:text="@string/fragment_send_mail_email"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etMail_SMF"
                android:textColor="#242424"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="@drawable/boarder_round_green_ff"
                android:ellipsize="end"
                android:gravity="left"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textSize="15sp"/>

            <TextView
                android:textColor="#242424"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:text="@string/fragment_send_mail_description"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etDescription_SMF"
                android:textColor="#242424"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/boarder_round_green_ff"
                android:ellipsize="end"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="5dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel_SMF"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button_green_ff"
                    android:text="@string/fragment_send_mail_cancel"
                    android:textColor="#fff"
                    android:textSize="19dp"
                    android:textStyle="bold"/>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnOk_SMF"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button_green_ff"
                    android:text="@string/fragment_send_mail_send"
                    android:textColor="#fff"
                    android:textSize="19dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:id="@+id/vUnderLine_SMF"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/black"/>

        </LinearLayout>
    </LinearLayout>


</ScrollView>