<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVoteTitle_VF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VoteTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In order to vote you must select the gender and age"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/llAge_VF"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/boarder_round_red_vf"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvAge_VF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/arrow_red"
                    android:drawablePadding="5dp"
                    android:gravity="center|center_vertical"
                    android:text="Age"/>

            </LinearLayout>

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/llGender_VF"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/boarder_round_red_vf"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvGender_VF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/arrow_red"
                    android:drawablePadding="5dp"
                    android:gravity="center|center_vertical"
                    android:text="Gender"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnChooseAnotherVote_VF"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_button_red_vf"
            android:gravity="center"
            android:text="choose another vote"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivVoteError_VF"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:overScrollMode="never"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>