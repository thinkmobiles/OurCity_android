<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

        <FrameLayout
            android:id="@+id/flVoteItemBoarder_VF"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/boarder_round_red_vf">

            <ImageView
                android:id="@+id/ivVotePercent_VF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/information_corner"
                tools:background="@android:color/black"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="-1dp"
                android:layout_gravity="right|top"/>

            <TextView
                android:id="@+id/tvVotePercent_VF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/ivVote_VF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:clickable="true"
                android:padding="10dp" />
        </FrameLayout>

            <TextView
                android:id="@+id/tvVoteTitle_VF"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

</LinearLayout>