<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cf_item_row_size"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivArrowEvent_EF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            tools:background="@android:color/darker_gray"
            android:src="@drawable/event_arrow_right"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle_CF"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="Title"
            android:textSize="@dimen/cf_item_text_size"
            android:textStyle="bold"
            tools:background="@android:color/holo_orange_dark"/>

        <TextView
            android:id="@+id/tvDate_CF"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="Date"
            android:textSize="@dimen/cf_item_text_size"
            tools:background="@android:color/holo_green_dark"/>

        <TextView
            android:id="@+id/tvAddress_CF"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical|start"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:text="Address"
            android:textSize="@dimen/cf_item_text_size"
            tools:background="@android:color/holo_blue_dark"/>
    </LinearLayout>

</LinearLayout>