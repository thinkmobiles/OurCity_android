<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tvTitle_RssFrgmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxLines="2"
            android:text="Title"
            android:textSize="@dimen/cf_item_text_size"
            android:textStyle="bold"
            tools:background="@android:color/holo_orange_dark" />

        <LinearLayout
            android:id="@+id/llDate_RssFrgmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/tvDate_Text_RssFrgmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"/>

            <TextView
                android:id="@+id/tvDate_RssFrgmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="none"
                android:text="@string/item_date_time" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArrowEvent_RssFrgmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="15dp"
            android:rotationY="180"
            android:src="@drawable/event_arrow"
            tools:background="@android:color/darker_gray" />

        <!--<ImageView-->
        <!--android:id="@+id/ivLink_RssFrgmt"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_margin="5dp"-->
        <!--android:scaleType="centerInside"-->
        <!--android:src="@drawable/link"-->
        <!--tools:background="@android:color/darker_gray"/>-->

    </LinearLayout>


</LinearLayout>