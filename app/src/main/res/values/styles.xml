<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/gray_dark</item>
        <item name="colorPrimaryDark">@color/gray_dark</item>
        <item name="colorAccent">@color/blue_light</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RadioButtonWithWhiteTextColorRtl">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/selector_radio_button_white</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

